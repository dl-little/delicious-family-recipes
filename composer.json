{
	"name": "doug/delicious-family-recipes",
	"config": {
		"vendor-dir": "vendor",
		"optimize-autoloader": true
	},
	"autoload": {
		"psr-4": {
			"DFR\\": "includes/"
		}
	},
	"scripts": {
		"build:admin": "sass ./scss/adminStyles.scss ./admin/css/adminStyles.css",
		"watch:admin": "sass --watch ./scss/adminStyles.scss ./admin/css/adminStyles.css",
		"build:editor": "sass ./scss/editorStyles.scss ./admin/css/editorStyles.css",
		"watch:editor": "sass --watch ./scss/editorStyles.scss ./admin/css/editorStyles.scss",
		"watch:main": "sass --watch ./scss/main.scss ./public/css/main.css",
		"build:main": "sass ./scss/main.scss ./public/css/main.css",
		"zip": [
			"sass ./scss/adminStyles.scss ./admin/css/adminStyles.css",
			"sass ./scss/adminStyles.scss ./admin/css/adminStyles.css",
			"sass ./scss/editorStyles.scss ./admin/css/editorStyles.css",
			"npm run build",
			"rm -rf zip",
			"mkdir -p 'zip'",
			"zip -r zip/delicious-family-recipes.zip . -x '*.lock' -x 'webpack.*' -x '*.md' -x '*.scss' -x '*.gitignore' -x ./zip/ -x 'node_modules/*' -x '.git/*'"
		]
	},
	"require": {}
}
